// prisma/schema.prisma

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}
model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  description String
  imageUrl    String?
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
}

model Category {
  id      Int       @id @default(autoincrement())
  name    String
  products Product[]
}
model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  name        String?
  password    String
  createdAt   DateTime @default(now())
}
